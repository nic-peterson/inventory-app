<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Genres - Bookstore Inventory</title>
    <link rel="stylesheet" href="/css/tailwind.css" />
  </head>
  <body class="bg-secondary text-gray-900">
    <%- include('../partials/header') %> <%- include('../partials/nav') %>

    <main class="p-4 max-w-4xl mx-auto">
      <div class="bg-white shadow-md rounded-lg p-6">
        <!-- Header -->
        <div class="flex justify-between items-center mb-6">
          <h1 class="text-2xl font-bold text-primary">Genres</h1>
          <a
            href="/genres/new"
            class="bg-accent text-white px-4 py-2 rounded hover:bg-accent-dark"
          >
            Add New Genre
          </a>
        </div>

        <!-- Genres Table -->
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th
                  class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                >
                  Name
                </th>
                <th
                  class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                >
                  Description
                </th>
                <th
                  class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                >
                  Books
                </th>
                <th
                  class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider"
                >
                  Actions
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% genres.forEach(genre => { %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900">
                    <%= genre.name %>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <div class="text-sm text-gray-500 truncate max-w-xs">
                    <%= genre.description || 'No description available' %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-500">
                    <%= genre.book_count || 0 %> books
                  </div>
                </td>
                <td
                  class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium"
                >
                  <div class="flex justify-end space-x-2">
                    <a
                      href="/genres/<%= genre.id %>"
                      class="text-primary hover:text-primary-dark"
                      >View</a
                    >
                    <a
                      href="/genres/<%= genre.id %>/edit"
                      class="text-accent hover:text-accent-dark"
                      >Edit</a
                    >
                    <form
                      action="/genres/<%= genre.id %>?_method=DELETE"
                      method="POST"
                      class="inline"
                      onsubmit="return confirm('Are you sure you want to delete this genre?')"
                    >
                      <button
                        type="submit"
                        class="text-red-600 hover:text-red-900"
                      >
                        Delete
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </main>
  </body>
</html>
